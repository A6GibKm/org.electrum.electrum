{
    "name": "libsecp256k1",
    "config-opts": [
        "--enable-module-recovery",
        "--disable-static"
    ],
    "cleanup": [
        "/lib/*.la",
        "/lib/pkgconfig"
    ],
    "sources": [
        {
            "type": "git",
            "url": "https://github.com/bitcoin-core/secp256k1",
            "commit": "HEAD"
        }
    ],
    "post-install": [
        "install -Dm644 COPYING /app/share/licenses/libsecp256k1/COPYING"
    ]
}
